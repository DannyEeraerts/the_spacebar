{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href ="{{ asset('css/login.css') }}">
    <link rel="stylesheet" href ="{{ asset('css/form.css') }}">
    <link rel="stylesheet" href = "https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.css">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row d-flex justify-content-center mt-3 ">
            <div class="col-10 col-lg-8 px-0">
                <h1 class="underline_magic p-3 mb-2 text-center">Edit your article</h1>
            </div>
        </div>
        {{ include('article_admin/_form.html.twig',
            {button_text: 'update'})
        }}

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/hide_error_message.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
    <script src="{{ asset('js/datetimepicker.js') }}"></script>
    <script src="{{ asset('js/fileinput_layout.js') }}"></script>

{% endblock %}